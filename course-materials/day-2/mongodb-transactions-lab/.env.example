# MongoDB Transactions Lab Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# For local development with replica set:
MONGODB_URI=mongodb://localhost:27017/transactions_lab?replicaSet=rs0

# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/transactions_lab?retryWrites=true&w=majority

# Database Name
DB_NAME=transactions_lab

# Application Settings
MAX_TRANSFER_AMOUNT=10000
DEFAULT_DAILY_LIMIT=5000
TRANSFER_FEE_THRESHOLD=100
EXCHANGE_FEE_RATE=0.01

# Development Settings
DEBUG_TRANSACTIONS=true
LOG_LEVEL=info