{
  "name": "docker-deployment-lab",
  "version": "1.0.0",
  "description": "Node.js application for Docker containerization and cloud deployment lab",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t node-docker-app:latest .",
    "docker:run": "docker run -p 3000:3000 node-docker-app:latest",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "heroku:build": "heroku container:push web",
    "heroku:release": "heroku container:release web",
    "heroku:deploy": "npm run heroku:build && npm run heroku:release",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "security:audit": "npm audit",
    "docker:scan": "docker scan node-docker-app:latest"
  },
  "keywords": [
    "nodejs",
    "express",
    "docker",
    "containerization",
    "cloud-deployment",
    "heroku",
    "aws",
    "azure"
  ],
  "author": "Docker Lab Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "express-rate-limit": "^6.7.1",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "pg": "^8.11.0",
    "redis": "^4.6.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!docker/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "consistent-return": "off"
    }
  }
}
