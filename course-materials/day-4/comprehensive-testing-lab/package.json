{
  "name": "comprehensive-testing-lab",
  "version": "1.0.0",
  "description": "Comprehensive Testing Suite Implementation Lab - Task Management API",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "cypress run",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov > coverage/lcov.info",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:quality-gates": "node tests/quality-gates.js",
    "test:performance": "jest tests/performance --testTimeout=30000",
    "test:contracts": "jest tests/contracts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "db:migrate": "node src/database/migrate.js",
    "db:migrate:test": "NODE_ENV=test node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "db:seed:test": "NODE_ENV=test node src/database/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "db:reset:test": "npm run db:migrate:test && npm run db:seed:test",
    "lint": "eslint src tests --ext .js",
    "lint:fix": "eslint src tests --ext .js --fix",
    "security:audit": "npm audit",
    "security:scan": "snyk test"
  },
  "keywords": [
    "nodejs",
    "testing",
    "jest",
    "cypress",
    "supertest",
    "tdd",
    "bdd",
    "integration-testing",
    "e2e-testing"
  ],
  "author": "Testing Lab",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-validator": "^6.15.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.10.0",
    "redis": "^4.6.5",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "winston": "^3.8.2",
    "express-winston": "^4.2.0",
    "joi": "^17.9.1",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "cypress": "^12.9.0",
    "@testing-library/jest-dom": "^5.16.5",
    "nodemon": "^2.0.22",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "@pact-foundation/pact": "^10.4.1",
    "autocannon": "^7.10.0",
    "faker": "^5.5.3",
    "nock": "^13.3.0",
    "sinon": "^15.0.4",
    "testcontainers": "^9.1.1",
    "artillery": "^2.0.0",
    "snyk": "^1.1128.0",
    "codecov": "^3.8.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/database/migrations/**",
      "!src/config/**",
      "!src/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/cypress/"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
